{
  "name": "stylesheet.guru",
  "version": "0.0.0",
  "description": "stylesheet.guru website",
  "dependencies": {
    "assert": "^1.3.0",
    "debug": "^2.1.2",
    "express": "4.10.1",
    "gulp": "^3.8.11",
    "gulp-stylus": "^2.0.1",
    "htmlescape": "1.0.0",
    "morgan": "1.4.1",
    "rethinkdb": "^1.16.2",
    "route-builder": "0.0.1",
    "underscore": "1.7.0"
  },
  "devDependencies": {
    "browserify": "6.2.0",
    "envify": "3.0.0",
    "react": "0.12.0",
    "reactify": "0.15.2",
    "source-map-support": "0.2.8"
  },
  "scripts": {
    "test": "jest",
    "build-css": "mkdir -p public && cat app/css/*.css > public/main.css",
    "build-js": "mkdir -p public && browserify app/js/main.js --standalone Application --debug --outfile public/main.js",
    "build": "npm run build-js && npm run build-css",
    "start": "node server",
    "web": "npm run build && npm start"
  },
  "browserify": {
    "transform": [
      [
        "envify"
      ],
      [
        "reactify",
        {
          "es6": true
        }
      ]
    ]
  }
}
