// ********** CODE COLORS **********
code-selector-color = #2A452A
code-property-color = #B22F3D
code-value-color = #3080A1
code-syntax-color = black
code-background-highlight = #333
code-text-highlight = #FFFFFF

// ********** CODE HIGHLIGHTING **********
.code-block
	width 300%
	height 100%
	overflow scroll
	
	.code-block-row
		width 100%
		height 25px
		border-bottom 1px solid #F4F4F4
		
		.code-block-row-number
			float left
			width 20px
			height 100%
			line-height 25px
			text-align center
			font-size 10px
			border-right 1px solid #D6D6D6
			background-color #F4F4F4
			
		.code-block-row-line
			width calc(100% - 70px)
			padding 0 20px
			line-height 25px
			font-family monospace
			font-weight 500
			font-size 14px
			float left
			
			.selector
				color code-selector-color
				
			.property
				padding 0 0 0 20px
				color code-property-color
				
			.value
				color code-value-color
				
			.syntax
				padding 0 5px
				color code-syntax-color
				
		&.highlighted
			display block
			
			.code-block-row-number
				background-color code-background-highlight
				color code-text-highlight
				
			.code-block-row-line
				background-color code-background-highlight
				
				.selector
					color code-text-highlight
					
				.property
					color code-text-highlight
					
				.value
					color code-text-highlight
					
				.syntax
					color code-text-highlight
				

				



