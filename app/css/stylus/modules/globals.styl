// ********** BORDER **********

.border-bottom-black
	border-bottom 5px solid black
	
.border-bottom-red
	border-bottom 5px solid red-dark
	
.border-top-red
	border-top 5px solid red-dark
	
.border-radius-5px
	border-radius(5px)
	
// ********** BUTTON **********
	
.btn
	position relative
	float left
	margin 5px 0 0 5px
	width -webkit-min-content
	width -moz-min-content
	width min-content
	width 23%
	height 29px
	font-size 12px
	font-weight 500
	text-align center
	line-height 29px
	color white
	cursor pointer
	display block
	border-radius(4px)
	z-index 100

	&:after
		position absolute
		left 0
		top 0
		width 0%
		height 100%
		content ""
		background-color rgba(0,0,0,0.1)
		z-index 101

	&:hover:after
		width 100%
		-webkit-transition: width .3s
	